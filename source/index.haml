  function showFour() {
    var elFour = document.getElementById("four");
    var elDisplay = elFour.style.display;
    if (elDisplay == "none") {
      elFour.style.display = "block";
    } else {
      elFour.style.display = "none";
    }
  }

  function toggleInfo() {
    var el = document.getElementById("information-container");
    var elDisplay = el.style.display;
    // console.log("clicked, and information-container's display is: " + elDisplay);
    if (elDisplay !== "block") {
      el.style.display = "block";
    } else {
      el.style.display = "none";
    }
    // console.log("set it to:" + el.style.display);
  }

  function goToTablet() {
    // 2000 is where the tablet frame starts
    window.scrollBy(0, (2000 - window.scrollY));
  }
